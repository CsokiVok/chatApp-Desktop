{
  "name": "chatapp-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "build": {
    "appId": "com.techat.chatapp",
    "productName": "ChatApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron\"",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron electron/main.js",

    "build:frontend": "cd frontend && npm run build:electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^7.0.1"
  },
  
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.1.2"
  }
}
